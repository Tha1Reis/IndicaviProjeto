<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Indicavi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Indicavi.Projeto.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-1">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" ><img class="icon-logo" id="icon-logo" src="https://scontent.fguj2-1.fna.fbcdn.net/v/t39.30808-6/279354347_679132193399517_8507948031117902509_n.jpg?_nc_cat=109&ccb=1-5&_nc_sid=730e14&_nc_ohc=VNKC2roHe2EAX8tOwZU&_nc_ht=scontent.fguj2-1.fna&oh=00_AT9rjf_hmLIBPiqN8FMzsMoiOffLPlwpyubuu-jXdjrZ8w&oe=626BE0CA"></a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <input type="checkbox" id="check">
                            <label for="check" id="icone"> 
                            <img class="icon-perfil" src="https://cdn-icons.flaticon.com/png/512/3502/premium/3502768.png?token=exp=1650961951~hmac=9ffca416dcae49a6317bcdba35225643" /> 
                            </label>
                            <div class="barra">	
	                        <nav class="aba">
		                        <a asp-area="" asp-controller="Login" asp-action="Index" ><div class="link">Login</div></a>
		                        <a asp-area="" asp-controller="Login" asp-action="Cadastro"><div class="link">Cadastra-se</div></a>
		                        <a asp-area="" asp-controller="Home" asp-action="Index" ><div class="link">Favoritos</div></a>
		                        <a asp-area="" asp-controller="Home" asp-action="Privacy" ><div class="link">Contato</div></a>
		                        <a asp-area="" asp-controller="Home" asp-action="Privacy" ><div class="link">Configuração</div></a>
	                        </nav>	
                            </div>
                            <div>
                            


</div>
         
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-distributed">

			<div class="footer-left">
          <img src="https://scontent.fguj2-1.fna.fbcdn.net/v/t39.30808-6/279354347_679132193399517_8507948031117902509_n.jpg?_nc_cat=109&ccb=1-5&_nc_sid=730e14&_nc_ohc=VNKC2roHe2EAX8tOwZU&_nc_ht=scontent.fguj2-1.fna&oh=00_AT9rjf_hmLIBPiqN8FMzsMoiOffLPlwpyubuu-jXdjrZ8w&oe=626BE0CA">
				<h3>A <span> empresa</span></h3>

				<p class="footer-links">
					<a href="#">Home</a>
					|
					<a href="#">Favoritos</a>
					|
					<a href="#">Sobre</a>
					|
					<a href="#">Contato</a>
				</p>

				<p class="footer-company-name">© 2022 Indicavi Ltd.</p>
			</div>

			<div class="footer-center">
				<div>
					<i class="fa fa-map-marker"></i>
					  <p><span>Ajuda</span>
						Entre em contato</p>
				</div>
				<div>
					<i class="fa fa-envelope"></i>
					<p><a href="suporteindicavi@example.com">suporteindicavi@example.com</a></p>
				</div>
			</div>
			<div class="footer-right">
				<p class="footer-company-about">
					<span>Sobre a empresa</span>
					Indicavi é uma empresa dedicada a comunicação entre cliente e prestador</p>
				<div class="footer-icons">
					<a href="#"><img class="i-icons " src="https://cdn-icons-png.flaticon.com/512/733/733547.png"></a>
					<a href="#"><img class="i-icons" src="https://cdn-icons-png.flaticon.com/512/2111/2111463.png"></a>
					<a href="#"><img class="i-icons" src="https://cdn-icons-png.flaticon.com/512/725/725643.png"></a>				</div>
			    </div>
		</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
